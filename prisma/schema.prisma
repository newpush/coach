// Periodized Training Plan System
// --------------------------------------

// The high-level macrocycle linked to a user's goal
model TrainingPlan {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Optional for templates
  goalId      String?
  goal        Goal?    @relation(fields: [goalId], references: [id], onDelete: Cascade)
  
  startDate   DateTime?
  targetDate  DateTime?
  
  // Template Fields
  name        String?   // Template name
  description String?   @db.Text
  isTemplate  Boolean   @default(false)
  
  // Lineage
  fromTemplateId String?
  template       TrainingPlan?  @relation("PlanTemplate", fields: [fromTemplateId], references: [id])
  derivedPlans   TrainingPlan[] @relation("PlanTemplate")
  
  // The plan is composed of blocks (Mesocycles)
  blocks      TrainingBlock[]
  
  // Metadata for the overall strategy
  strategy    String   @default("LINEAR") // LINEAR, UNDULATING, BLOCK, POLARIZED
  activityTypes Json?  // Preferred workout types: ["Ride", "Run", "Gym", "Swim"]
  customInstructions String? @db.Text
  status      String   @default("ACTIVE") // DRAFT, ACTIVE, COMPLETED, ARCHIVED, ABANDONED
  
  currentBlockId String? // Shortcut to current block for quick UI access
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId, status])
  @@index([isTemplate])
}

// Mesocycle: A distinct phase of training (e.g., "Base 1")
model TrainingBlock {
  id              String         @id @default(uuid())
  trainingPlanId  String
  plan            TrainingPlan   @relation(fields: [trainingPlanId], references: [id], onDelete: Cascade)
  
  order           Int            // Sequence: 1, 2, 3...
  name            String         // "Base Phase 1"
  type            String         // PREP, BASE, BUILD, PEAK, RACE, TRANSITION
  primaryFocus    String         // AEROBIC_ENDURANCE, TEMPO, SWEET_SPOT, THRESHOLD, VO2_MAX, etc.
  
  startDate       DateTime
  durationWeeks   Int            // e.g., 4 weeks
  
  // Rules/Logic for generation
  recoveryWeekIndex Int?         // e.g., 4 (meaning every 4th week is recovery)
  progressionLogic  String?      // AI context: "Increase interval duration by 10% weekly"
  
  weeks           TrainingWeek[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([trainingPlanId, order])
}

// Microcycle: A single week of training
model TrainingWeek {
  id              String         @id @default(uuid())
  blockId         String
  block           TrainingBlock  @relation(fields: [blockId], references: [id], onDelete: Cascade)
  
  weekNumber      Int            // 1, 2, 3 within the block
  startDate       DateTime
  endDate         DateTime
  
  // Targets
  volumeTargetMinutes Int        // Planned volume
  tssTarget       Int            // Planned TSS
  isRecovery      Boolean        @default(false)
  focus           String?        // Optional override: "Recovery", "Test Week"
  focusKey        String?        // Standardized key: "AEROBIC_ENDURANCE", "RECOVERY"
  focusLabel      String?        // User-facing label: "Aerobic Endurance"
  explanation     String?        @db.Text // AI explanation for why this week is structured this way
  
  // Links to workouts
  workouts        PlannedWorkout[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([blockId, weekNumber])
}

