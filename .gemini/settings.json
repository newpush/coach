{
  "general": {
    "vimMode": true,
    "previewFeatures": true,
    "enablePromptCompletion": true,
    "checkpointing": {
      "enabled": true
    }
  },
  "tools": {
    "autoAccept": true
  },
  "mcpServers": {
    "nuxt-ui": {
      "url": "https://ui.nuxt.com/mcp",
      "trust": true
    },
    "sentry": {
      "url": "https://mcp.sentry.dev/mcp/newpush-y4/coach-watts",
      "trust": true
    },
    "trigger": {
      "command": "npx",
      "args": ["trigger.dev@latest", "mcp", "--api-url", "https://trigger.newpush.com/"]
    },
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "chrome-devtools-mcp@latest","--autoConnect", "--channel=beta"
      ]
    },
    "analytics-mcp": {
      "command": "pipx",
      "args": [
        "run",
        "analytics-mcp"
      ],
      "env": {
        "GOOGLE_APPLICATION_CREDENTIALS": "/Users/hdkiller/.secrets/application_default_credentials.json",
        "GOOGLE_PROJECT_ID": "coach-app-481412"
      },
      "trust": true
    }
  },
  "security": {
    "enablePermanentToolApproval": true
  },
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(gh pr create:*)",
      "Bash(gh repo create:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(npm run:*)",
      "Bash(npm install:*)",
      "Bash(npm test:*)",
      "Bash(pnpm run:*)",
      "Bash(pnpm install:*)",
      "Bash(pnpm:*)",
      "Bash(yarn:*)",
      "Bash(docker ps:*)",
      "Bash(chmod:*)",
      "Bash(./scripts/*)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(tsx:*)",
      "Bash(rm:*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.local)",
      "Read(./.env.production)",
      "Read(./secrets/**)"
    ]
  }
}